// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String  @id @default(cuid())
    email    String  @unique
    username String  @unique
    password String
    builds   Build[]
}

model Build {
    id     String @id @default(cuid())
    name   String
    user   User   @relation(fields: [userId], references: [id])
    userId String
}

model Set {
    id      String  @id @default(cuid())
    name    String  @unique
    twoPc   String
    threePc String?
    fourPc  String?
    sixPc   String?
    items   Gear[]
}

model Gear {
    id          String  @id @default(cuid())
    name        String  @unique
    slot        String  @default("two-hand")
    category    String  @default("bow")
    rarity      String  @default("legendary")
    set         Set?    @relation(fields: [setId], references: [id])
    setId       String?
    effect      String?
    description String
    src         String
}
