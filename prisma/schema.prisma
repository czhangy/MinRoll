// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String  @id @default(cuid())
    email    String  @unique
    username String  @unique
    password String
    builds   Build[]
}

model Build {
    id     String @id @default(cuid())
    name   String
    user   User   @relation(fields: [userId], references: [id])
    userId String
}

model Gear {
    id          String @id @default(cuid())
    name        String @unique
    category    String
    rarity      String
    effect      String
    description String
    src         String
}
